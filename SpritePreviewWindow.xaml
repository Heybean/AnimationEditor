<Window x:Class="AnimationEditor.SpritePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimationEditor"
        mc:Ignorable="d"
        Title="Sprite Preview" Height="150" Width="150" ResizeMode="CanResize"  WindowStyle="ToolWindow" Closing="PreviewRender_Closing">
    <Grid>
        <Canvas x:Name="cv_PreviewRender" Background="Gray" Margin="5" SizeChanged="PreviewRender_SizeChanged"  ClipToBounds="True" >
            <Canvas.CacheMode>
                <BitmapCache/>
            </Canvas.CacheMode>
            <Rectangle x:Name="rect_Sprite"  Fill="{Binding Path=CurrentFrame, UpdateSourceTrigger=PropertyChanged}" />
        </Canvas>
    </Grid>
</Window>
