<UserControl x:Class="AnimationEditor.View.MainCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnimationEditor.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Canvas Background="Gray" ClipToBounds="True">
        <Rectangle x:Name="rect_SpriteDisplay" Panel.ZIndex="1"/>
        <Rectangle x:Name="rect_SpriteOutline" StrokeThickness="0" Stroke="Lime" Panel.ZIndex="2"/>
        <Image x:Name="img_Origin" Source="origin_point.png" Panel.ZIndex="3" />
    </Canvas>
</UserControl>
