<UserControl x:Class="AnimationEditor.View.TextureAtlasesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:AnimationEditor.Controls"
             xmlns:graphics="clr-namespace:AnimationEditor.Graphics"
             xmlns:vm="clr-namespace:AnimationEditor.ViewModel"
             xmlns:cv="clr-namespace:AnimationEditor.Converter"
             xmlns:e="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:pt="http://propertytools.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:TextureAtlasesViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <cv:ListCountConverter x:Key="listCountConverter" />
        <Style x:Key="TreeViewItem_SelectStyle" TargetType="{x:Type TreeViewItem}">
            <Style.Triggers>
                <Trigger Property="controls:MultiSelectTreeViewBehavior.IsItemSelected" Value="True">
                    <Setter Property="Background" Value="{x:Static SystemColors.HighlightBrush}" />
                    <Setter Property="Foreground" Value="{x:Static SystemColors.HighlightTextBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <DockPanel>
        <Label DockPanel.Dock="Top" Content="Texture Atlases" Background="SlateGray"  Foreground="White"/>
        <ToolBarTray DockPanel.Dock="Bottom">
            <ToolBar ToolBarTray.IsLocked="True">
                <Button ToolTip="Add Texture Atlas" Command="{Binding AddAtlasCommand}">Add</Button>
                <Button ToolTip="Remove Texture Atlas"
                        Command="{Binding RemoveAtlasCommand}" CommandParameter="{Binding SelectedItems, ElementName=tree}">
                    Remove
                </Button>
            </ToolBar>
        </ToolBarTray>

        <pt:TreeListBox x:Name="tree"  HierarchySource="{Binding HierarchySource}" ChildrenPath="SubNodes" IsExpandedPath="ShowChildren" SelectedItem="{Binding SelectedItem}"/>
